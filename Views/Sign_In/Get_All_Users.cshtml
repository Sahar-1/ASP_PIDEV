
@model IEnumerable<PiDevEsprit.Models.DBO_User>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
   
    @Styles.Render("~/Content/css/table-users.css")
</head>
@{
    ViewBag.Title = "Get_All_Users";
}
<body>
    <section>
        <h1>All registered users </h1>
        <div class="tbl-header">
            <table cellpadding="3" cellspacing="5" border="0">
                <thead>
                    <tr>
                        <th >
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Actif)
                        </th>


                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastLoggedIn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastLoggedOut)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LockTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dbo_User_Provider)
                        </th>
                        <th>
                            Action
                        </th>

                    </tr>
                </thead>
            </table>
        </div>
        <div class="tbl-content">
            <table cellpadding="0" cellspacing="0" border="0">
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td >
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Actif)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lastlog)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lastlogout)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.locktime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dbo_User_Provider)
                        </td>
                        <td>
                            <button class="btn btn-primary">@Html.ActionLink("Edit", "EditUser", "Sign_In", new { id = item.Id  }, null)</button>
                            <button class="btn btn-danger">@Html.ActionLink("Delete", "DeleteUser", "Sign_In", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to delete?');" })</button>
                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </section>
  
    <script type="text/javascript">
        $(window).on("load resize ", function () {
            var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
            $('.tbl-header').css({ 'padding-right': scrollWidth });
        }).resize();
    </script>
</body>
</html>